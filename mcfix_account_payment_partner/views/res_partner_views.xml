<odoo>


    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">account_partner_payment.partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account_payment_partner.view_partner_property_form"/>
        <field name="arch" type="xml">
            <field name="customer_payment_mode_id" position="attributes">
                <attribute name="domain">[('payment_type', '=', 'inbound'), ('company_id', '=', current_company_id)]
                </attribute>
            </field>
            <field name="supplier_payment_mode_id" position="attributes">
                <attribute name="domain">[('payment_type', '=', 'outbound'), ('company_id', '=', current_company_id)]
                </attribute>
            </field>
        </field>
    </record>


</odoo>