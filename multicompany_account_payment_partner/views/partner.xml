<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.property.form</field>
        <field name="model">res.partner.property</field>
        <field name="inherit_id" ref="multicompany_account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <field name="property_payment_term_id" position="after">
                <field name="customer_payment_mode_id" widget="selection"
                       domain="[('payment_type', '=', 'inbound'), ('company_id', '=', company_id)]"/>
            </field>
            <field name="property_supplier_payment_term_id" position="after">
                <field name="supplier_payment_mode_id" widget="selection"
                       domain="[('payment_type', '=', 'outbound'), ('company_id', '=', company_id)]"/>
            </field>
        </field>
    </record>
</odoo>