<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">add.mandate.on.customer.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account_banking_mandate.invoice_form"/>
        <field name="arch" type="xml">
            <field name="mandate_id" position="attributes">
                <attribute name="domain">
                    [('partner_id', '=', commercial_partner_id), ('state', '=', 'valid'), ('company_id','=',company_id)]
                </attribute>
            </field>
        </field>
    </record>
</odoo>