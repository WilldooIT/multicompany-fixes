<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id),
                    ('type', '=', 'sale')]</attribute>
            </field>
            <field name="invoice_journal_id" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id),
                    ('type', '=', 'sale')]</attribute>
            </field>
            <field name="journal_ids" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id),
                    ('journal_user', '=', True),
                    ('type', 'in', ['bank', 'cash'])]</attribute>
            </field>
            <field name="fiscal_position_ids" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id)]</attribute>
            </field>
            <field name="default_fiscal_position_id" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id)]</attribute>
            </field>
            <field name="stock_location_id" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id),
                    ('usage', '=', 'internal')]</attribute>
            </field>
        </field>
    </record>
</odoo>
