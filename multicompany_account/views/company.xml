<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="multicompany_product.view_company_form"/>
        <field name="arch" type="xml">
            <page name="accounting" position="inside">
                    <group>
                        <group>
                            <field name="property_account_income_categ_id"
                                   domain="[('company_id','=',id),('deprecated', '=', False)]"/>
                            <field name="property_account_expense_categ_id"
                                   domain="[('company_id','=',id),('deprecated', '=', False)]"/>
                        </group>
                        <group>
                            <field name="property_account_payable_id"
                                   domain="[('internal_type', '=', 'payable'),('company_id','=',id),('deprecated', '=', False)]"/>
                            <field name="property_account_receivable_id"
                                   domain="[('internal_type', '=', 'receivable'),('company_id','=',id),('deprecated', '=', False)]"/>
                        </group>
                    </group>
                </page>
        </field>
    </record>
</odoo>